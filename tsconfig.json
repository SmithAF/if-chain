{
  "compilerOptions": {
    "target": "ES2015",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "typeRoots": ["node_modules/@types"],
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "./typings",
    "declarationMap": true,
    "lib": ["ES5", "ES2015", "DOM"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "outDir": "dist",
    "moduleResolution": "node"
  }
}
